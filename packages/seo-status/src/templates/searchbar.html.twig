<form method="post" class="p-3 mt-6 relative" action="/" id="search-form">
  <label
    for="search-input"
    class="mb-2 text-sm font-medium text-gray-900 sr-only">Recherche</label>
  <div class="relative">
    <div class="flex absolute inset-y-0 -left-1 md:left-2 items-center pl-3 pt-2 pointer-events-none ">
      <svg aria-hidden="true" class="w-5 h-5 rotate-90 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
    </div>
    <input
      type="hidden"
      name="referring_route"
      value="{{ app.request.get('_route') }}">
    <textarea
      x-data="{enterIsSubmit: true}"
      @keypress="if (event.ctrlKey && event.key == 'Enter') document.querySelector('#search-input').value =  document.querySelector('#search-input').value + '\n'"
      @keydown.enter="if (!event.ctrlKey && enterIsSubmit) {event.preventDefault(); document.querySelector('#search-form').submit();} "
      type="search"
      id="search-input"
      name="query"
      class="block h-[65px] p-4 pl-10 md:pl-12 w-full text-3xl text-gray-900  rounded border overflow-y-hidden {{ search_value is defined ? 'border-white' : 'border-gray-300' }} focus:ring-sky-500 focus:border-sky-500"
      placeholder="Mot clef, Url, Domaine..."
      required>{{ search_value|default('') }}</textarea>
    <button
      type="submit"
      class="md:block hidden text-white bg-white m-2 absolute right-0 top-0 bottom-0   rounded-r  px-4 h-3/4">
      <svg class="h-5 w-5 fill-current" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="30"
        height="30" viewBox="0 0 30 30">
      <path d="M 13 3 C 7.4889971 3 3 7.4889971 3 13 C 3 18.511003 7.4889971  23 13 23 C 15.396508 23 17.597385 22.148986 19.322266 20.736328 L 25.292969 26.707031 A 1.0001 1.0001 0 1 0 26.707031 25.292969 L 20.736328 19.322266 C 22.148986 17.597385 23 15.396508 23 13 C 23 7.4889971 18.511003 3 13 3 z M 13 5 C 17.430123 5 21 8.5698774 21 13 C 21 17.430123 17.430123 21 13 21 C 8.5698774 21 5 17.430123 5 13 C 5 8.5698774 8.5698774 5 13 5 z">
      </path>
      </svg>
    </button>
  </div>
</form>
